<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/center_logo"
    android:layout_marginTop="120dp"/>


    <LinearLayout
        android:id="@+id/ll_center_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/google_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_google"/>
        <ImageView
            android:id="@+id/fb_login"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_facebook"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_center_button">

        <ImageView
            android:id="@+id/cb_terms"
            android:src="@mipmap/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/tncdisclaimer"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />


    </LinearLayout>

</RelativeLayout>
